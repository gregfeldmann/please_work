<div class="page-header">
  <h1>
    Entertainments
    <a href="/entertainments/new" class="btn btn-lg btn-success">New Entertainment</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "entertainments_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :picture_cont, "Picture contains" %>
    <%= f.text_field :picture_cont, :class => "form-control", :placeholder => "Picture contains" %>
  </div>

<div class="form-group">
  <%= f.label :receiver_id, "Receiver" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :receiver_id_gteq, :class => "form-control", :placeholder => "Receiver greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :receiver_id_lteq, :class => "form-control", :placeholder => "Receiver less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
  <%= f.label :sender_id, "Sender" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :sender_id_gteq, :class => "form-control", :placeholder => "Sender greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :sender_id_lteq, :class => "form-control", :placeholder => "Sender less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
    <%= f.label :rating_cont, "Rating contains" %>
    <%= f.text_field :rating_cont, :class => "form-control", :placeholder => "Rating contains" %>
  </div>

<div class="form-group">
    <%= f.label :category_cont, "Category contains" %>
    <%= f.text_field :category_cont, :class => "form-control", :placeholder => "Category contains" %>
  </div>

<div class="form-group">
    <%= f.label :title_cont, "Title contains" %>
    <%= f.text_field :title_cont, :class => "form-control", :placeholder => "Title contains" %>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
  <%= f.label :entertainment_id, "Receiver Entertainment" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :receivers_entertainment_id_gteq, :class => "form-control", :placeholder => "Receiver Entertainment greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :receivers_entertainment_id_lteq, :class => "form-control", :placeholder => "Receiver Entertainment less than or equal to" %>
    </div>
  </div>
</div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/entertainments" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#entertainments_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Picture</th>
        <th>Title</th>
        <th>Category</th>
        <th>Rating</th>
        <th>Sender</th>
        <th>Receiver</th>
        <th>Actions</th>
      </tr>

      <% @entertainments.each do |entertainment| %>
      <tr>
        <td><%= entertainment.picture %></td>
        <td><%= entertainment.title %></td>
        <td><%= entertainment.category %></td>
        <td><%= entertainment.rating %></td>
        <td><%= entertainment.sender_id %></td>
        <td><%= entertainment.receiver_id %></td>
        <td>
          <a href="/entertainments/<%= entertainment.id %>" class="btn btn-primary">Show</a>
          <a href="/entertainments/<%= entertainment.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_entertainment/<%= entertainment.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @entertainments, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
