<div class="page-header">
  <h3>Recommend #<%= @recommend.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Entertainment</dt>
      <dd><%= @recommend.entertainment_id %></dd>

      <dt>User</dt>
      <dd><%= @recommend.user_id %></dd>

      <dt>Username</dt>
      <dd><%= @recommend.username %></dd>

      <dt>Receiver</dt>
      <dd><%= @recommend.receiver_id %></dd>

      <dt>Receiver username</dt>
      <dd><%= @recommend.receiver_username %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/recommends" class="btn btn-primary">
        Back
      </a>
      <a href="/recommends/<%= @recommend.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_recommend/<%= @recommend.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
